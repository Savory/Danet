{
	"lint": {
		"files": {
			"include": ["src/"],
			"exclude": ["node_modules/", "./**/*.test.ts"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"imports": {
			"$fresh/": "https://deno.land/x/fresh@1.1.5/",
			"twind": "https://esm.sh/twind@0.16.19",
			"twind/": "https://esm.sh/twind@0.16.19/",
			"preact": "https://esm.sh/preact@10.13.1",
			"preact/": "https://esm.sh/preact@10.13.1/",
			"preact-render-to-string": "https://esm.sh/*preact-render-to-string@5.2.6",
			"@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
			"@preact/signals-core": "https://esm.sh/@preact/signals-core@1.2.3",
			"$std/": "https://deno.land/std@0.178.0/"
	},
	"fmt": {
		"options": {
			"singleQuote": true,
			"useTabs": true
		},
		"files": {
			"exclude": ["./node_modules/", "./coverage/", "./doc/"]
		}
	},
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"tasks": {
		"test": "NO_LOG=true COOKIE_SECRET_KEY=mysecretkey deno test --allow-env --allow-net --allow-read -A --unstable --coverage=coverage spec",
		"start:example": "deno run --allow-net --allow-env --watch example/run.ts"
	}
}
