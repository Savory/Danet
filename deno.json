{
	"lint": {
		"files": {
			"include": ["src/"],
			"exclude": ["node_modules/", "./**/*.test.ts"]
		},
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"options": {
			"singleQuote": true,
			"useTabs": true
		},
		"files": {
			"exclude": ["node_modules/"]
		}
	},
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
